@page "/{link}"
@inject HttpClient Http

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<h1>@DateTime.Now</h1>

Welcome to your new app.

@if (Items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Path</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Path</td>
                </tr>
            }
        </tbody>
    </table>
}